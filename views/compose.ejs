<%- include("./partials/header.ejs") %>

        <h1>Compose</h1>
        <form class="compose" action="/compose" method="POST">
            <div class = "form-group">
                <label for="title">Title</label> 
                <input class="form-control" id = "title" type="text" name = "postTitle"  autocomplete="off">    
            </div>
            <div class = "form-group" >
                <label for="post">Post</label> 
                <textarea class="form-control" id = "post" row = "4" cols="50" name = "postBody"  autocomplete="off"></textarea>   
            </div>
            <button class="btn btn-primary" type="submit" name = "button">Publish</button>
        </form>

